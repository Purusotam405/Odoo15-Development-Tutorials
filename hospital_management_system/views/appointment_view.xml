<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="action_confirm_appointments" model="ir.actions.server">
        <field name="name">Confirm Appointment</field>
        <field name="type">ir.actions.server</field>
        <field name="model_id" ref="model_hospital_appointment"/>
        <field name="binding_model_id" ref="model_hospital_appointment"/>
        <field name="state">code</field>
        <field name="code">records.action_confirm()</field>
    </record>

    <record id="view_appointment_kanban" model="ir.ui.view">
        <field name="name">hospital.appointment.kanban</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="name"/>
                <field name="gender"/>
                <field name="age"/>
                <field name="email"/>
                <field name="note"/>
                <field name="company"/>
                <field name="website"/>


                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li>
                                        Name:
                                        <field name="name"/>
                                    </li>
                                    <li>
                                        Gender:
                                        <field name="gender"/>
                                    </li>
                                    <li>
                                        Age:
                                        <field name="age"/>
                                    </li>
                                    <li>
                                        Email:
                                        <field name="email"/>
                                    </li>
                                    <li>
                                        Company:
                                        <field name="company"/>
                                    </li>
                                    <li>
                                        Website:
                                        <field name="website"/>
                                    </li>

                                </ul>
                            </div>
                        </div>
                    </t>

                </templates>
            </kanban>

        </field>


    </record>

    <record id="view_appointment_tree" model="ir.ui.view">
        <field name="name">hospital.appointment.tree</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <tree multi_edit="1" expand="1">
                <header>
                    <button name="action_done" string="Mark As Done" class="btn-primary" type="object"/>
                </header>
                <field name="name"/>
                <field name="reference"/>
                <field name="doctor_id"/>
                <field name="patient_id"/>
                <field name="age" optional="show"/>
                <field name="gender" optional="show"/>
                <field name="email" optional="show"/>
                <field name="company" optional="show"/>
                <field name="website" optional="show"/>
                <field name="date_appointment" optional="show"/>
                <field name="note" optional="show"/>
                <field name="state" optional="show"/>
            </tree>
        </field>
    </record>

    <record id="view_appointment_form" model="ir.ui.view">
        <field name="name">hospital.appointment.form</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button id="button_confirm" name="action_confirm" string="Confirm" class="btn-primary"
                            states="draft" confirm="Are you sure you want to confirm?"
                            type="object"/>
                    <button id="button_done" name="action_done" string="Mark As Done" class="btn-primary"
                            states="confirm"
                            type="object"/>
                    <button id="button_draft" name="action_draft" string="Send To Draft" class="btn-primary"
                            states="cancel"
                            type="object"/>
                    <button name="action_send_mail" string="Send Mail" class="oe_highlight"
                            data-hotkey="m"
                            type="object"/>
                    <button id="button_cancel" name="action_cancel" string="Cancel" states="draft,done,confirm"
                            confirm="Are you sure you want to cancel?"
                            type="object"/>
                    <button id="action_url" name="action_url" string="Open Url" class="btn-primary" type="object"/>

                    <field name="state" widget="statusbar" options="{'clickable':'1'}"
                           statusbar_visible="draft,confirm,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="patient_id" options="{'no_open':True, 'no_create_edit':True}"/>
                            <field name="patient_name_id" context="{'hide_code':True}"/>
                            <field name="gender" readonly="1" force_save="1"/>
                            <field name="age"/>
                            <field name="email"/>
                            <field name="company"/>
                            <field name="website"/>
                        </group>
                        <group>
                            <field name="doctor_id" options="{ 'no_open':True, 'no_create_edit':True}"/>
                            <field name="date_time_checkup"/>
                            <field name="date_appointment"/>

                        </group>
                    </group>
                    <notebook>
                        <page string="Doctor Prescription" name="doctor_prescription">
                            <group>
                                <field name="prescription"/>
                            </group>
                        </page>
                        <page string="Medicine" name="medicine">
                            <field name="prescription_line_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="qty"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="name"/>
                                    </group>
                                    <group>
                                        <field name="qty"/>
                                    </group>
                                </form>

                            </field>

                        </page>
                        <page string="Other Info" name="other_info">
                            <field name="note"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>

    </record>

    <record id="view_appointment_search" model="ir.ui.view">
        <field name="name">hospital.appointment.search</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <search string="Appointments">
                <field name="name"/>
                <field name="note"/>
                <separator/>
                <filter string="Male" name="male" domain="[('gender', '=', 'male')]"/>
                <filter string="Female" name="female" domain="[('gender', '=' ,'female')]"/>
                <filter string="Others" name="others" domain="[('gender', '=' ,'others')]"/>
                <group expand="1" string="Group By">
                    <filter string="Gender" name="gender" context="{'group_by':'gender'}"/>
                    <filter string="Patient Name" name="patient_name" context="{'group_by':'name'}"/>
                </group>
                <searchpanel>
                    <!--                    <field name="gender" string="Gender" select="multi" icon="fa-exchange"/>-->
                    <field name="state" string="status" select="multi" icon="fa-bars" enable_counters="1"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <record id="appointment_action" model="ir.actions.act_window">
        <field name="name">Appointments</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.appointment</field>
        <field name="context">{'search_default_male':1}</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first appointment!
            </p>
        </field>

    </record>


    <menuitem id="menu_hospital_root"
              name="Hospital"
              sequence="10"
              web_icon="hospital_management_system,static/description/logo.png"/>

    <menuitem id="menu_appointment_root"
              name="Appointments"
              parent="menu_hospital_root"/>

    <menuitem id="menu_appointment"
              name="Appointments"
              parent="menu_appointment_root"
              action="appointment_action"/>

    <menuitem id="menu_create_appointment"
              name="Create Appointment"
              parent="menu_appointment_root"
              action="action_create_appointment"/>

    <menuitem id="menu_search_appointment"
              name="Search Appointment"
              parent="menu_appointment_root"
              action="action_search_appointment_m1"/>

    <menuitem id="menu_reports"
              name="Reporting"
              parent="menu_hospital_root"/>

    <menuitem id="menu_reports_menu"
              name="Appointments"
              parent="menu_reports"
              action="action_report_appointment"/>

    <!--    <menuitem id="menu_patient_root"-->
    <!--              name="Patients"-->
    <!--              parent="menu_reports"-->
    <!--              action="action_report_patient"-->
    <!--              sequence="20"/>-->


</odoo>